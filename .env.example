
# ========================
# Flask & Project Settings
# ========================
SECRET_KEY=your-flask-secret-key
OPENAI_API_KEY=your-openai-api-key

UPLOAD_FOLDER=./uploads
MAX_CONTENT_LENGTH=16777216
ALLOWED_EXTENSIONS=pdf,docx,doc,txt

PORT=5000
DEBUG=True
FLASK_ENV=development

# ========================
# Redis & RabbitMQ
# ========================
REDIS_HOST=redis
REDIS_PORT=6379

RABBITMQ_USER=hr_user
RABBITMQ_PASS=hr_pass
RABBITMQ_VHOST=hr_vhost

CELERY_BROKER_URL=amqp://hr_user:hr_pass@rabbitmq:5672/hr_vhost
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ========================
# Database Settings
# ========================
USE_TEST_DATABASE=True

DB_HOST=postgres
DB_PORT=5432
POSTGRES_ROOT_USER=postgres
POSTGRES_ROOT_PASSWORD=your-root-password

DB_USER=hr_tool_admin
DB_PASS=your-db-password
DB_NAME=hr_tool_db

TEST_DB_USER=hr_tool_test
TEST_DB_PASS=your-test-db-password
TEST_DB_NAME=hr_tool_test_db

# ========================
# JWT & Tokens
# ========================
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=45
REFRESH_TOKEN_EXPIRE_DAYS=1

# ========================
# OAuth Credentials
# ========================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret

LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

